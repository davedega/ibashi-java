<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_marginEnd="@dimen/ibashi_margin_17"
    android:layout_marginRight="@dimen/ibashi_margin_17"
    android:layout_marginLeft="@dimen/ibashi_margin_17"
    android:layout_marginStart="@dimen/ibashi_margin_17"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/directionTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/ironside_gray"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="@dimen/ibashi_margin_8"
        tools:text="@string/direction" />

    <TextView
        android:id="@+id/daytimeTV"
        android:textColor="@color/ironside_gray"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/directionTV"
        tools:text="@string/datetime" />

    <TextView
        android:id="@+id/linecodeTV"
        android:textColor="@color/dawn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/directionTV"
        android:layout_alignStart="@+id/directionTV"
        android:layout_below="@+id/directionTV"
        android:layout_marginTop="@dimen/ibashi_margin_8"
        tools:text="@string/linecode" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:layout_marginTop="@dimen/ibashi_margin_8"
        android:layout_below="@+id/linecodeTV"
        android:layout_centerHorizontal="true"
        android:background="@color/dawn" />
</RelativeLayout>